.dynamic-form-group-wrapper
  .dynamic-form-group-content-wrapper
    .dynamic-form-group-header
      button.ui-button.ui-button-red((click)="addItem()" type='button') {{fields.addButtonTitle | translate}}

    .dynamic-form-group-body
      .dynamic-form-group-item(*ngFor="let group of controlGroup.controls; let i=index")
        .dynamic-form-group-item-body
          app-form-field(*ngFor="let field of formFields" [field]='field' [form]='group')

        .dynamic-form-group-item-footer
          button.ui-button.ui-button-red((click)="removeItem(i)", type='button') {{fields.removeButtonTitle | translate}}
